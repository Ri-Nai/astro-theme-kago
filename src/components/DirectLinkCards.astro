---
import { getImagePathForAstro, getImageAlt } from '../utils/pathUtils';

export interface LinkItem {
  title: string;
  description?: string;
  website: string;
  image?: string;
}

export interface Props {
  title?: string;
  description?: string;
  website?: string;
  image?: string;
  basePath?: string;
  links?: LinkItem[];
}

const {
  title,
  description,
  website,
  image,
  basePath = "",
  links = []
} = Astro.props;

// 兼容旧的单个链接模式
const linkItems: LinkItem[] = links.length > 0 ? links : (title ? [{
  title,
  description,
  website: website || "",
  image
}] : []);
---

<div class="direct-link-cards">
  {linkItems.map((link) => (
    <article class="direct-link-card">
      <a href={link.website} target="_blank" rel="noopener noreferrer">
        {link.image && (
          <div class="direct-link-image">
            <img
              src={getImagePathForAstro(link.image, basePath, Astro.url)}
              alt={getImageAlt(link.image, link.title)}
              loading="lazy"
            />
          </div>
        )}

        <div class="direct-link-details">
          <h4 class="direct-link-title">{link.title}</h4>
          <p class="direct-link-description">
            {link.description || link.website}
          </p>
        </div>
      </a>
    </article>
  ))}
</div>

<style>
  .direct-link-cards {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
    margin: 2rem 0;
    padding: 0;
  }

  .direct-link-card {
    background: var(--bg-primary);
    border: 1px solid var(--border-color);
    border-radius: var(--blog-radius-md);
    overflow: hidden;
    transition: var(--blog-transition);
    box-shadow: var(--blog-shadow-1);
    height: 100%;
  }

  .direct-link-card:hover {
    transform: translateY(-3px);
    box-shadow: var(--blog-shadow-2);
    border-color: var(--brand-primary);
  }

  .direct-link-card a {
    display: flex;
    flex-direction: column;
    padding: 1.25rem;
    text-decoration: none;
    color: inherit;
    height: 100%;
    gap: 1rem;
  }

  .direct-link-image {
    align-self: center;
    width: 48px;
    height: 48px;
    border-radius: var(--blog-radius-sm);
    overflow: hidden;
    background: var(--bg-soft);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .direct-link-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    margin: 0;
    border-radius: 0;
    box-shadow: none;
    transition: transform 0.3s ease;
  }

  .direct-link-card:hover .direct-link-image img {
    transform: scale(1.1);
  }

  /* SVG 图标特殊处理 */
  .direct-link-image img[src$=".svg"] {
    object-fit: contain;
    padding: 6px;
  }

  .direct-link-details {
    text-align: center;
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .direct-link-title {
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--text-primary);
    margin: 0 0 0.5rem 0;
    line-height: 1.3;
  }

  .direct-link-description {
    font-size: 0.85rem;
    color: var(--text-secondary);
    margin: 0;
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* 响应式设计 */
  @media (max-width: 768px) {
    .direct-link-cards {
      grid-template-columns: 1fr;
      gap: 0.75rem;
    }

    .direct-link-card a {
      padding: 1rem;
      gap: 0.75rem;
    }

    .direct-link-image {
      width: 40px;
      height: 40px;
    }

    .direct-link-title {
      font-size: 1rem;
    }

    .direct-link-description {
      font-size: 0.8rem;
      -webkit-line-clamp: 1;
    }
  }

  @media (max-width: 480px) {
    .direct-link-card a {
      padding: 0.875rem;
    }

    .direct-link-image {
      width: 36px;
      height: 36px;
    }
  }

  /* 当只有一个卡片时，居中显示 */
  .direct-link-cards:has(.direct-link-card:only-child) {
    grid-template-columns: 1fr;
    max-width: 400px;
    margin: 2rem auto;
  }

  /* 当只有奇数个卡片时，最后一个跨两列 */
  .direct-link-cards:has(.direct-link-card:nth-child(odd):last-child)
    .direct-link-card:last-child {
    grid-column: 1 / -1;
    max-width: 400px;
    margin: 0 auto;
  }

  @media (max-width: 768px) {
    .direct-link-cards:has(.direct-link-card:nth-child(odd):last-child)
      .direct-link-card:last-child {
      grid-column: auto;
      max-width: none;
      margin: 0;
    }
  }
</style>
